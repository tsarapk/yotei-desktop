                                        <StackPanel Grid.Column="0" Spacing="5">
                                            <TextBlock Text="{Binding Name}" 
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"
                                                       TextTrimming="CharacterEllipsis" />
                                            <TextBlock Text="{Binding Payload}" 
                                                       FontSize="11"
                                                       Foreground="#888"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxLines="2" />
                                        </StackPanel>

                                        <!-- Status -->
                                        <Border Grid.Column="1"
                                                Background="#3F3F46"
                                                Padding="8,4"
                                                CornerRadius="4"
                                                VerticalAlignment="Center">
