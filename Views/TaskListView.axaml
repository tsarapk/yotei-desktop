                                                       FontSize="11"
                                                       Foreground="White" />
                                        </Border>

                                        <!-- Priority -->
                                        <Border Grid.Column="2"
                                                Background="#FF9800"
                                                Padding="8,4"
                                                CornerRadius="4"
                                                VerticalAlignment="Center">
