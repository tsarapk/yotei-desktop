                                                    VerticalAlignment="Center">
                                            <TextBlock Text="Ð˜ÑÐ¿Ð¾Ð»Ð½Ð¸Ñ‚ÐµÐ»ÑŒ" 
                                                       FontSize="9"
                                                       Foreground="#666" />
                                            <TextBlock Text="{Binding PerformerText}" 
                                                       FontSize="11"
                                                       Foreground="#888" />
                                        </StackPanel>

                                        <!-- Deadline -->
                                        <StackPanel Grid.Column="4" 
                                                    Spacing="2"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="Ð¡Ñ€Ð¾Ðº" 
